{
  "expo": {
    "name": "Soce",
    "slug": "ozel-sosyal-ag",
    "version": "1.0.0",
    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Gönderilerinize konum eklemek için konum izni gereklidir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000",
        "softwareKeyboardLayoutMode": "resize"
      },
      "package": "com.turkerata.ozelsosyalag",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Gönderilerinize konum eklemek için konum izni gereklidir."
        }
      ]
    ]
    
  }
}